<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/menu_lable"
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:gravity="center_horizontal|center_vertical"
        android:text="МЕНЮ"
        android:textColor="@color/purple_500"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/mode1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mode1"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@color/purple_500"
        android:text="Марафон без рандома"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/mode2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_lable" />

    <Button
        android:id="@+id/mode2"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@color/purple_500"
        android:text="Марафон с \nрандомом"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/mode3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode1" />

    <Button
        android:id="@+id/mode3"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@color/purple_500"
        android:text="Экзамен"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/about"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode2" />

    <Button
        android:id="@+id/about"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@color/purple_500"
        android:text="Автор"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mode3" />
</androidx.constraintlayout.widget.ConstraintLayout>